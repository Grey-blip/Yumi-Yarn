<%- include('../partials/header.ejs') %>

<main>
    <form method = "POST" action = "/events/<%= event._id%>?_method=PUT" enctype="multipart/form-data" class="new-event">
        <label for="category">Category  </label>
        <select name="category" id="category" required="Required">

            <option value="Crochet a Craft"
                <% if (event.category === 'Crochet a Craft') { %> selected <% } %>
            >Crochet a Craft</option>
            <option value="Team Building"
                <% if (event.category === 'Team Building') { %> selected <% } %>
            >Team Building</option>
            <option value="Yarn Market"
                <% if (event.category === 'Yarn Market') { %> selected <% } %>
            >Yarn Market</option>
            <option value="Networking & Skill Building"
                <% if (event.category === 'Networking & Skill Building') { %> selected <% } %>
            >Networking & Skill Building</option>
            <option value="Other"
                <% if (event.category === 'Other') { %> selected <% } %>
            >Other</option>
        </select>


            <br> <br>

        <label for="title">Title  </label>
        <input name="title" type="text" id="title" value="<%= event.title%>" placeholder="Title" required>

            <br> <br>

        <label for="details" class="details">Details  </label>
        <textarea name="details" id="details" cols="60" rows="3" placeholder="details" required minlength="10"><%= event.details%></textarea>

            <br> <br>

        <label for="location">Where  </label>
        <input name="location" type="text" id="location" value="<%= event.location%>" placeholder="Location" required>

            <br> <br>
          
        <label for="start"> Start  </label>
        <input type="datetime-local" name="start" id="start" value="<%= event.startForm%>" required>

            <br> <br>

        <label for="end"> End  </label>
        <input type="datetime-local" name="end" id="end" value="<%= event.endForm%>" required>

            <br> <br>

            <label for="image">Current Image  </label>
            <br>
            <img src="/images/<%= event.image %>" alt="event image" width="100" height="100">
            <br> <br>

        <label for="image">Change Image </label>
        <input type="file" id="image" name="image" accept="image/*">
        <br>
        <span class="abri" >* Accepted Files include (jpeg, png, gif)</span>

            <br> <br>
        <button>Submit</button>

    </form>
</main>

<%- include('../partials/footer.ejs') %>